<div class="relative" data-target="hover-like-users.card">
  <div class="absolute bottom-8 left-0 z-50 bg-white shadow-lg rounded-lg p-4 min-w-max-content">
      <div class="flex relative z-0 overflow-hidden">
        <% @users.each do |user| %>
          <%= link_to image_tag(user.avatar_url, class: "h-7 w-7 rounded-full text-white shadow-solid", alt: user.username, title: user.username), user_path(user) %>
        <% end %>
    </div>
  </div>
</div>
