<li class="py-4" id="<%= dom_id(comment) %>">
  <div class="flex space-x-3">
    <%= link_to image_tag(comment.user.avatar_url, class: "h-12 w-12 rounded-full"), user_path(comment.user) %>
    <div class="flex-1 space-y-1">
      <div class="flex items-center justify-between">
        <h3 class="text-sm font-medium leading-5"><%= comment.user.username %></h3>
        <span class="timeago text-sm leading-5 text-gray-500" datetime="<%= comment.created_at.to_s %>"></span>
      </div>
      <p class="text-sm leading-5 text-gray-500">
        <%= comment.comment %>
      </p>
    </div>
  </div>
</li>