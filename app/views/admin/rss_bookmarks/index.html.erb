<% content_for :title, 'RSS Bookmarks' %>

<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="p-2 bg-gray-50"></th>
              <th class="p-2 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th class="p-2 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Tag
              </th>
              <th class="p-2 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Created At
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200"> 
            <% @rss_bookmarks.each do |bookmark| %>
              <tr>
                <td class="p-2 text-right text-sm leading-5 font-medium">
                  <% if bookmark.is_display? %>
                    <%= link_to undisplay_admin_rss_bookmark_path(bookmark), method: 'patch', class: 'text-gray-500' do %>
                      <svg class="h-7 w-7" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                  <% else %>
                    <%= link_to display_admin_rss_bookmark_path(bookmark), method: 'patch', class: 'text-gray-300' do %>
                      <svg class="h-7 w-7" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                      </svg>
                    <% end %>
                  <% end %>
                </td>
                <td class="p-2">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <% if bookmark.favicon_local.attached? %>
                        <span>
                          <%= image_tag(bookmark.favicon_local, class: "h-10 w-10") %>
                        </span>
                      <% else %>
                        <span>
                          <%= lavatar_tag(bookmark.letter_char, 16, class: "w-10 h-10") %>
                        </span>
                      <% end %>
                    </div>
                    <div class="ml-4">
                      <%= link_to bookmark.url, target: '_blank' do %>
                        <div class="text-sm leading-5 font-medium text-gray-900">
                          <%= bookmark.title %>
                        </div>
                        <div class="text-sm leading-5 text-gray-500">
                          <%= bookmark.url %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="p-2 text-sm leading-5">
                  <% bookmark.tags.each do |tag| %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= tag.name %>
                    </span>
                  <% end %>
                </td>
                <td class="p-2 text-sm leading-5 text-gray-500">
                  <%= bookmark.created_at %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="p-2">
          <%= render partial: 'layouts/pagination', locals: { pagy: @pagy } %>
        </div>
      </div>
    </div>
  </div>
</div>
